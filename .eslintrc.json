{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "app",
                "onlyDependOnLibsWithTags": ["*"]
              },
              {
                "sourceTag": "package",
                "onlyDependOnLibsWithTags": ["shared", "util", "package", "ui", "types"]
              },
              {
                "sourceTag": "ui",
                "onlyDependOnLibsWithTags": ["shared", "util", "ui", "types"]
              },
              {
                "sourceTag": "shared",
                "onlyDependOnLibsWithTags": ["util", "types"]
              },
              {
                "sourceTag": "util",
                "onlyDependOnLibsWithTags": ["util", "types"]
              },
              {
                "sourceTag": "types",
                "onlyDependOnLibsWithTags": ["types"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
